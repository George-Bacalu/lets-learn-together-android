    <RelativeLayout
        android:id="@+id/homepageHeader"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:padding="10dp"
        android:background="@drawable/homepage_header_background">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/translucent_dark_blue"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="40dp">

            <ImageButton
                android:id="@+id/decoration_rectangle1"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@color/translucent_dark_blue" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/translucent_dark_blue"
