<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="-10dp"
    tools:context=".text_to_sign_section.TextToSignSectionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-35dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/sectionHeaderImage"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:src="@drawable/text_to_sign_section_header" />

        <ImageView
            android:id="@+id/videoSectionHeaderOverlay"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:src="@drawable/overlay_background_final" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp">

            <TextView
                android:id="@+id/videoSectionHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/source_sans_pro_black"
                android:text="SECŢIUNE TEXT - DACTILEMĂ"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/videoSectionHeaderText"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/source_sans_pro_regular"
                android:text="Introdu un text şi lasă-ne pe noi să-l traducem în limbajul semnelor!"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout>


        <EditText
            android:id="@+id/categoryNameInput"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/videoSectionHeaderOverlay"
            android:layout_centerHorizontal="true"
            android:background="@drawable/input_design"
            android:hint="Introduceţi un text..."
            android:paddingVertical="10dp"
            android:paddingLeft="20dp"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/categoryNameInput"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_design_2"
            android:gravity="center|bottom|top"
            android:includeFontPadding="false"
            android:paddingHorizontal="30dp"
            android:text="Confirmă"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/outputContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/saveButton"
            android:layout_marginTop="30dp"
            android:paddingHorizontal="10dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/resultCategoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/light_blue">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="Category Name"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/resultTranslation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/resultCategoryName"
                android:layout_centerHorizontal="true"
                app:cardElevation="10dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="50dp">

                    <LinearLayout
                        android:id="@+id/categoryText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/slideBackwards">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingHorizontal="4dp">

                            <ImageView
                                android:id="@+id/signImage1"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/dactilema_c" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="7dp"
                                android:background="@android:color/darker_gray" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:fontFamily="@font/source_sans_pro_bold"
                                android:text="C"
                                android:textAlignment="center"
                                android:textSize="23sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
