                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:fontFamily="@font/source_sans_pro_bold"
                                android:text="C"
                                android:textAlignment="center"
                                android:textSize="23sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingHorizontal="4dp">

                            <ImageView
                                android:id="@+id/signImage4"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/dactilema_c" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="7dp"
                                android:background="@android:color/darker_gray" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:fontFamily="@font/source_sans_pro_bold"
                                android:text="C"
                                android:textAlignment="center"
                                android:textSize="23sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingHorizontal="4dp">

                            <ImageView
                                android:id="@+id/signImage5"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/dactilema_c" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="7dp"
                                android:background="@android:color/darker_gray" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:fontFamily="@font/source_sans_pro_bold"
                                android:text="C"
                                android:textAlignment="center"
                                android:textSize="23sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/slideBackwards"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="@color/light_blue"
                        android:src="@drawable/ic_arrow_left"
                        app:backgroundTint="@color/white"
                        app:borderWidth="1dp"
                        app:rippleColor="@color/white"
                        app:tint="@color/white" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/slideForwards"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="@color/light_blue"
                        android:src="@drawable/ic_arrow_right"
                        app:backgroundTint="@color/white"
                        app:borderWidth="1dp"
                        app:rippleColor="@color/white"
                        app:tint="@color/white" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/toHomePageFabButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/dark_blue"
            android:layout_below="@+id/outputContent"
            android:src="@drawable/ic_home"
            app:backgroundTint="@color/white"
            app:borderWidth="2dp"
            app:rippleColor="@color/white"
            app:tint="@color/white" />

    </RelativeLayout>

